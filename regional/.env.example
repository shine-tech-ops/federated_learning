# Regional Node 环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# ===================
# 区域节点配置 对应数据库
# ===================
REGION_ID=
NODE_NAME=

# ===================
# RabbitMQ 配置
# ===================
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=5672
RABBITMQ_USER=rabbitmq
RABBITMQ_PASSWORD=rabbitmq
RABBITMQ_VHOST=/

# ===================
# MQTT 配置
# ===================
MQTT_BROKER_HOST=127.0.0.1
MQTT_BROKER_PORT=1883
MQTT_USER=mqtt
MQTT_PASSWORD=mqtt2024#
MQTT_KEEPALIVE=60

# ===================
# 任务管理配置
# ===================
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=3600
DEVICE_TIMEOUT=300
HEARTBEAT_INTERVAL=30
STATUS_CHECK_INTERVAL=10

# ===================
# 日志配置
# ===================
LOG_LEVEL=INFO
LOG_FILE=logs/regional.log
LOG_MAX_SIZE=10 MB
LOG_BACKUP_COUNT=5

# ===================
# 网络配置
# ===================
CONNECTION_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# ===================
# 调试配置
# ===================
DEBUG=false
VERBOSE_LOGGING=false
MOCK_DEVICES=false
